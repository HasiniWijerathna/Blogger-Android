<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/selected_post_title"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Post name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--<TextView-->
        <!--android:id="@+id/selected_post_content"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/selected_post_title"-->
        <!--android:hint="Post content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:paddingTop="10dp"-->
        <!--android:paddingBottom="10dp"-->
       <!--/>-->

    <us.feras.mdv.MarkdownView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selected_post_content"
        android:hint="Content"
        android:layout_below="@+id/selected_post_title"/>

    <TextView
        android:id="@+id/response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responses"
        android:layout_below="@+id/selected_post_content"
        />
    <EditText
        android:id="@+id/selected_post_new_comment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Add a response"
        android:layout_below="@+id/response"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/selected_post_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@+id/selected_post_new_comment"/>

    <ListView
        android:id="@+id/selected_post_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_below="@+id/selected_post_save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    </RelativeLayout>
